{
  "server": {
    "name": "LangFlow Connect MCP Server",
    "version": "1.0.0",
    "description": "MCP server for LangFlow Connect integration with advanced cost tracking and workspace management",
    "author": "LangFlow Connect Team"
  },
  "tools": {
    "workspace_operations": {
      "enabled": true,
      "max_file_size": "10MB",
      "allowed_extensions": [".py", ".js", ".ts", ".json", ".md", ".txt", ".yaml", ".yml", ".xml", ".html", ".css"],
      "max_files_per_request": 100,
      "safe_directories": [".", "src", "tests", "docs", "config"]
    },
    "cost_tracking": {
      "enabled": true,
      "default_currency": "USD",
      "alert_threshold": 100.0,
      "budget_warning_threshold": 80.0,
      "supported_models": ["gpt-4", "gpt-3.5-turbo", "claude-3", "claude-2"]
    },
    "langflow_integration": {
      "enabled": true,
      "default_websocket_url": "ws://localhost:3000/ws",
      "default_api_url": "http://localhost:3000/api/v1",
      "connection_timeout": 30,
      "max_reconnect_attempts": 5,
      "heartbeat_interval": 30
    },
    "system_management": {
      "enabled": true,
      "health_check_interval": 60,
      "max_log_size": "10MB",
      "log_retention_days": 30
    }
  },
  "security": {
    "jwt_secret": "your_jwt_secret_key_here_change_in_production",
    "tls_enabled": true,
    "allowed_origins": ["http://localhost:3000", "https://localhost:3000"],
    "rate_limiting": {
      "enabled": true,
      "max_requests_per_minute": 100,
      "max_requests_per_hour": 1000
    },
    "input_validation": {
      "enabled": true,
      "max_string_length": 10000,
      "max_json_depth": 10
    }
  },
  "logging": {
    "level": "INFO",
    "file": "logs/mcp_server.log",
    "max_size": "10MB",
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "console_output": true
  },
  "performance": {
    "max_concurrent_operations": 10,
    "operation_timeout": 300,
    "cache_enabled": true,
    "cache_ttl": 3600,
    "memory_limit": "512MB"
  },
  "monitoring": {
    "metrics_enabled": true,
    "prometheus_endpoint": "/metrics",
    "health_check_endpoint": "/health",
    "alerting": {
      "enabled": true,
      "email_alerts": false,
      "webhook_alerts": false
    }
  },
  "development": {
    "debug_mode": false,
    "hot_reload": false,
    "test_mode": false,
    "mock_external_services": false
  }
} 